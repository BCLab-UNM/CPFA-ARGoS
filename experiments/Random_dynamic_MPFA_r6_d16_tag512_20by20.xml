<?xml version="1.0" encoding="utf-8"?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="6000"
                ticks_per_second="32"
		random_seed="0"/>
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>

    <CPFA_controller id="CPFA"
                     library="build/source/CPFA/libCPFA_controller">
      <actuators>
        <differential_steering implementation = "default"/>
      </actuators>

      <sensors>
        <footbot_proximity    implementation = "default" show_rays = "false"/>

	<positioning          implementation = "default"
					/>	

        <footbot_motor_ground implementation = "rot_z_only"/>
      </sensors>

      <params>

        <settings TargetDistanceTolerance           = "0.05"
		  TargetAngleTolerance               = "0.1"
		  FoodDistanceTolerance              = "0.13"
                  NestDistanceTolerance = "0.05"  
                  NestAngleTolerance = "0.1"
                  SearchStepSize                    = "0.08"
                  RobotForwardSpeed                 = "16.0"
                  RobotRotationSpeed                = "8.0"
		  DestinationNoiseStdev             = "0.0"
		  PositionNoiseStdev             = "0.00"
		  ResultsDirectoryPath              = "results/"/>
      </params>

    </CPFA_controller>

  </controllers>

  <loop_functions library = "build/source/CPFA/libCPFA_loop_functions"
                  label   = "CPFA_loop_functions">

    <!-- evolvable parameters -->
        <CPFA       ProbabilityOfSwitchingToSearching = "0.862018953444"
                    ProbabilityOfReturningToNest      = "0.00688369218936"
                    UninformedSearchVariation         = "1.80214009862"
                    RateOfInformedSearchDecay         = "0.29857781164"
                    RateOfSiteFidelity                = "16.8699397382"
                    RateOfLayingPheromone             = "18.0791490976"
                    RateOfPheromoneDecay              = "0.0585866594122"
		    PrintFinalScore = "1"
		    />

         <settings
	     MaxSimTimeInSeconds = "6000"
	     MaxSimCounter = "1"
	     VariableFoodPlacement = "0"
	     OutputData = "0"
	     DrawDensityRate = "4"
	     DrawIDs = "1"
	     DrawTrails = "1"
	     DrawTargetRays = "0"
	     FoodDistribution = "0"
	     FoodItemCount = "512"
	     NumberOfClusters = "8"
	     ClusterWidthX = "8"
	     ClusterLengthY = "8"
	     FoodRadius = "0.05"
	     NestRadius = "0.25"
	     NestElevation = "0.01"
      NestPosition_0="7.5, 7.5" 
      NestPosition_1="7.5, 2.5" 
      NestPosition_2="7.5, -2.5" 
      NestPosition_3="7.5, -7.5"
      NestPosition_4="2.5, 7.5" 
      NestPosition_5="2.5, 2.5" 
      NestPosition_6="2.5, -2.5" 
      NestPosition_7="2.5, -7.5"
      NestPosition_8="-2.5, 7.5" 
      NestPosition_9="-2.5, 2.5" 
      NestPosition_10="-2.5, -2.5" 
      NestPosition_11="-2.5, -7.5"
      NestPosition_12="-7.5, 7.5" 
      NestPosition_13="-7.5, 2.5" 
      NestPosition_14="-7.5, -2.5" 
      NestPosition_15="-7.5, -7.5"
      />

  </loop_functions>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="20.0, 20.0, 1" center="0,0,0.5">

    <floor id="floor" source="loop_functions" pixels_per_meter="10"/>

    <distribute>
            <position max="6, 6.0, 0.0" method="uniform" min="4, 4, 0.0"/>
            <orientation mean="0, 0, 0" method="gaussian" std_dev="360, 0, 0"/>
            <entity max_trials="100" quantity="1">
                <foot-bot id="CPFA_0"><controller config="CPFA"/></foot-bot>
            </entity>
        </distribute>
        <distribute>
            <position max="6, -4, 0.0" method="uniform" min="4, -6, 0.0"/>
            <orientation mean="0, 0, 0" method="gaussian" std_dev="360, 0, 0"/>
            <entity max_trials="100" quantity="2">
                <foot-bot id="CPFA_1"><controller config="CPFA"/></foot-bot>
            </entity>
        </distribute>
        <distribute>
            <position max="-4, 6.0, 0.0" method="uniform" min="-6, 4, 0.0"/>
            <orientation mean="0, 0, 0" method="gaussian" std_dev="360, 0, 0"/>
            <entity max_trials="100" quantity="1">
                <foot-bot id="CPFA_2"><controller config="CPFA"/></foot-bot>
            </entity>
        </distribute>
        <distribute>
            <position max="-4, -4, 0.0" method="uniform" min="-6, -6, 0.0"/>
            <orientation mean="0, 0, 0" method="gaussian" std_dev="360, 0, 0"/>
            <entity max_trials="100" quantity="2">
                <foot-bot id="CPFA_3"><controller config="CPFA"/></foot-bot>
            </entity>
        </distribute>


